{
  "name": "Cooking Shorts Generator",
  "short_name": "Shorts",
  "description": "Turn cooking videos into YouTube Shorts with AI voiceover",
  "start_url": "/shorts.html",
  "display": "standalone",
  "background_color": "#0F0F0F",
  "theme_color": "#FF0000",
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "/shorts.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "video",
          "accept": ["video/*"]
        }
      ]
    }
  }
}
